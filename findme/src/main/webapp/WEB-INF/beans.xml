<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:jaxrs="http://cxf.apache.org/jaxrs"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd">
	
        <import resource="dataAccessContext.xml"/>
        
        <import resource="classpath:META-INF/cxf/cxf.xml" />
        
	<!-- Kazes springu koje jos konfiguracije da koristi. Ovi dolaze uz CXF i treba da ih ukljucis -->
	<import resource="classpath:META-INF/cxf/cxf.xml" />
	<import resource="classpath:META-INF/cxf/cxf-servlet.xml" />
	
	<bean id="baseDAO" class="com.lolsto.findme.db.dao.BaseDAOImpl" >
            <property name="hibernateTemplate" ref="hibernateTemplate" />
        </bean>   
<!--	<bean id="matchDAO" class="org.test.MatchDAOImpl" >
            <property name="hibernateTemplate" ref="hibernateTemplate" />          
        </bean>   
        
	<bean id="matchBO" class="org.test.MatchBOImpl" >
            <property name="matchDAO" ref="matchDAO" />
        </bean>        -->
        
	<!-- Ovo je klasa u kojoj CXF trazi metode koji se izlazu kao veb servisi -->
	<bean id="sampleserviceclass" class="com.lolsto.findme.service.SampleService" >
            <property name="baseDAO" ref="baseDAO" />
        </bean>
	
<!--	 Ovo definise rest server -->
	<jaxrs:server id="sampleservice" address="/sampleservice">
		 <!--Rest servisu kazes u kojoj klasi su metodi--> 
		<jaxrs:serviceBeans>
			<ref bean="sampleserviceclass" />
		</jaxrs:serviceBeans>
		<jaxrs:providers>
			<ref bean="jsonProviderJacksonJaxb" />
		</jaxrs:providers>                
	</jaxrs:server>
        
        <bean id="jsonProviderJacksonJaxb" class="org.codehaus.jackson.jaxrs.JacksonJaxbJsonProvider" />
</beans>
